    <link href="//fonts.googleapis.com/css?family=PT+Sans:400,400i,700,700i" rel="stylesheet">
    <!--//fonts-->

</head>
<body>
    <div class="login-section-agileits" style="margin-left:50px;">
        <h3 class="form-head">register to Gioia today, Its'free!</h3>
       
        <form role="form" method="post" action="/Account/Register">

            @if (ViewBag.error != null)
            {
                <div class="w3ls-icon">
                    <h5 style="color:red">@ViewBag.error</h5>
                </div>
            }

            <div class="w3ls-icon">
                <span class="fa fa-angellist bgWhite" aria-hidden="true"></span>
                @*<input type="text" class="lock" name="username" placeholder="username" />*@
                @Html.TextBoxFor(a => a.username, new { @class = "lock", placeholder = "username" })
                @Html.ValidationMessageFor(a => a.username)
            </div>

            <div class="w3ls-icon">
                <span class="fa fa-user bgWhite" aria-hidden="true"></span>
                @*<input type="text" class="lock" name="fname" placeholder="FirstName"/>*@
                @Html.TextBoxFor(a => a.fname, new { @class = "lock bgWhite", placeholder = "First Name" })
                @Html.ValidationMessageFor(a => a.fname)
            </div>
            <div class="w3ls-icon">
                <span class="fa fa-user bgWhite" aria-hidden="true"></span>
                @*<input type="text" class="lock" name="lname" placeholder="LastName" />*@
                @Html.TextBoxFor(a => a.lname, new { @class = "lock", placeholder = "Last Name" })
                @Html.ValidationMessageFor(a => a.lname)

            </div>

            <div class="w3ls-icon">
                <span class="fa fa-envelope bgWhite" aria-hidden="true"></span>
                @*<input type="email" class="user" name="Email" placeholder="Email" />*@
                @Html.TextBoxFor(a => a.Email, new { @class = "lock", placeholder = "Email" })
                @Html.ValidationMessageFor(a => a.Email)

            </div>
            <div class="w3ls-icon">
                <span class="fa fa-birthday-cake bgWhite" aria-hidden="true"></span>
                @*<input type="datetime" class="lock" name="bdate" placeholder="BirthDate" />*@
                <input type="date"  id="datepicker" class="lock" name="bdate" placeholder="BirthDate">

                @*@Html.EditorFor(a => a.bdate, new { @class = "lock form-control", id = "datepicker", placeholder = "BirthDate" })*@

                @*@Html.TextBoxFor(a => a.bdate, new { @class = "lock date-picker", placeholder = "BirthDate" })*@
                @Html.ValidationMessageFor(a => a.bdate)

            </div>
            <div class="w3ls-icon">
                <span class="fa fa-lock bgWhite" aria-hidden="true"></span>
                @*<input type="password" class="lock" id="password1" name="Password" placeholder="Password" />*@
                @Html.PasswordFor(a => a.Password, new { @class = "lock", id = "password1", placeholder = "Password" })
                @Html.ValidationMessageFor(a => a.Password)


            </div>
            <div class="w3ls-icon">
                <span class="fa fa-expeditedssl bgWhite" aria-hidden="true"></span>
                @*<input type="password" class="lock" id="password2" name="ConfirmPassword" placeholder="Confirm Password" />*@
                @Html.PasswordFor(a => a.ConfirmPassword, new { @class = "lock", name = "ConfirmPassword", id = "password2", placeholder = "Confirm Password" })
                @Html.ValidationMessageFor(a => a.ConfirmPassword)
            </div>
            <input type="submit" value="register now">
        </form>
    </div>
    <script type="text/javascript">
		window.onload = function () {
			document.getElementById("password1").onchange = validatePassword;
			document.getElementById("password2").onchange = validatePassword;
		}

		function validatePassword() {
			var pass2 = document.getElementById("password2").value;
			var pass1 = document.getElementById("password1").value;
			if (pass1 != pass2)
				document.getElementById("password2").setCustomValidity("Passwords do not Match");
			else
				document.getElementById("password2").setCustomValidity('');
			//empty string means no validation error
		}
    </script>

</body>

</html>

